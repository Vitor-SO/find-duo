{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "./dist/src",
    "lib": ["es2022"],
    "target": "es2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": ["src"]
}